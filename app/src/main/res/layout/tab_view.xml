<?xml version="1.0" encoding="utf-8"?>

<org.mozilla.vrbrowser.ui.views.TabView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tab_view_height"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tabCardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/tabViewPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

            <View
                android:id="@+id/tabHoverOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#aa000000"
                android:visibility="gone"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/tabViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textSize="26sp"
            android:gravity="center"
            android:shadowColor="#00000000"
            android:textColor="#ffffff"
            android:lines="1"
            tools:text="Title"/>

        <org.mozilla.vrbrowser.ui.views.UIButton
            android:id="@+id/tabViewCloseButton"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_icon_exit"
            android:tint="@drawable/tab_close_icon_color"
            android:tintMode="multiply"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />

        <org.mozilla.vrbrowser.ui.views.UIButton
            android:id="@+id/tabViewSelection"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:tintColorList="@drawable/main_button_icon_color"
            android:src="@drawable/ic_icon_check"
            android:tint="@color/azure"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:id="@+id/tabViewActive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#33000000"
            android:visibility="gone">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:tint="@color/fog"
                android:src="@drawable/ic_icon_dialog_tabs_active"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tabAddView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:visibility="gone"
        android:background="@drawable/tab_add_background">
        <ImageView
            android:id="@+id/tabAddIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_icon_add"
            android:tint="@drawable/tab_add_icon_color"
            android:tintMode="multiply"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tabViewUrl"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textSize="13sp"
        android:gravity="start"
        android:lines="1"
        android:background="@android:color/transparent"/>

</org.mozilla.vrbrowser.ui.views.TabView>