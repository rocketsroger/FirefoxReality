<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:color="@color/fog" android:width="4dp" />
        </shape>
    </item>
    <item android:state_hovered="true" android:state_pressed="false">
        <shape>
            <stroke android:color="@color/fog" android:width="4dp" />
        </shape>
    </item>
    <item android:state_hovered="false" android:state_pressed="false">
        <shape>
            <stroke android:color="@color/fog_blur" android:width="4dp" />
        </shape>
    </item>
</selector>
